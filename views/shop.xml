<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record model="ir.ui.view" id="attribute_form_image_view">
        <field name="name">product.attribute.value.image2</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product_configurator.product_attribute_value_form_view"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='name']" position="after">
                <field name="valueimage"  widget="image" class="oe_avatar"/>

            </xpath>
        </field>
    </record>



</odoo>
